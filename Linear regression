import numpy as np
import matplotlib.pyplot as plt
from sklearn.linear_model import LinearRegression
from sklearn.metrics import r2_score

# Generate sample data
np.random.seed(10)  
X = np.linspace(1, 10, 10).reshape(-1, 1)   # Independent variable
y = 2.5 * X.flatten() + 4 + np.random.randn(10) * 2  # Dependent variable with noise

# Create and train the model
model = LinearRegression()
model.fit(X, y)

# Predictions
y_pred = model.predict(X)

# Print regression equation
print(f"Regression Equation: y = {model.coef_[0]:.2f}x + {model.intercept_:.2f}")

# Print R² score
print(f"Model Performance (R² Score): {r2_score(y, y_pred):.3f}")

# Plot data and regression line
plt.scatter(X, y, color="green", label="Actual Data")
plt.plot(X, y_pred, color="orange", linewidth=2, label="Predicted Line")
plt.title("Simple Linear Regression Example")
plt.xlabel("X")
plt.ylabel("y")
plt.legend()
plt.show()
